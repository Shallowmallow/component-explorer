<hbox width="100%" height="100%" style="padding: 0px;spacing:0px;padding-bottom:10px;">
    <style>
        .code-editor {
            border: none;
        }

        .view-container {
            padding: 0px;
        }

        .view-container-scrollview {
            border: none;
        }

        .label, .button, .textfield, .textarea {
            font-name: "fonts/Roboto-Regular.ttf";
            font-size: 13px;
        }
    </style>
    
    <box width="100%" height="100%">
        <tabview id="mainTabs" width="75%" height="100%" tabPosition="bottom" horizontalAlign="right">
            <vbox text="View" icon="icons/16/progressbar.png">
                <button text="bob" />
            </vbox>
            <vbox text="Source" icon="icons/16/progressbar.png">
                
            </vbox>
        </tabview>
        
        <vbox width="25%" height="100%" style="padding-top: 0px;">
            <hbox width="100%" height="100%">
                <treeview id="mainTree" width="100%" height="100%" styleName="full-width" style="border: none;" />
            </hbox>    
        </vbox>    
    </box>   

    
    <box width="100%" height="100%" style="padding-top: 10px;" hidden="true">
        <tabview id="viewTabs" width="100%" height="100%">
            
        </tabview>
    </box>
    
    <box width="200" height="100%" style="padding-top: 10px;" hidden="true">
        <tabview id="logTabs" width="100%" height="100%">
            <box text="Log" icon="icons/16/document_editing.png" width="100%" height="100%">
                <textarea text="" id="logData" width="100%" height="100%" style="padding-left: 5px;padding-top: 5px;" />
            </box>    
        </tabview>
    </box>
</hbox>
