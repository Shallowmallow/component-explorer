    <box width="200" height="100%" style="padding-top:38px;" hidden="true">
        <listview id="viewList" width="100%" height="100%" selectedIndex="0">
            <item-renderer layoutName="horizontal" width="100%">
                <label id="title" verticalAlign="center" />
                <spacer width="100%" />
                <image id="largeIcon" />
            </item-renderer>
        </listview>    
    </box>    
    
