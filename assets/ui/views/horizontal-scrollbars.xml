<?xml version="1.0" encoding="utf-8" ?>
<hbox width="100%" style="padding: 5px;">
    <!--
    <style source="hoizontal-scrollbars.css" />
    -->    
    <script source="scrolls-shared.hscript" />
    
    <vbox>
        <hscroll id="defaultHScroll" width="200" />
        <hscroll id="styledHScroll" width="200" />
        <hscroll id="bitmapHScroll" width="200" />
    </vbox>
    
    <spacer width="100%" />
    
    <grid columns="2">
        <label text="Width:" style="vertical-align:center;" />
        <hslider id="widthValue" onchange="setWidth()" min="60" pos="200" max="300" />
        
        <label text="Height:" style="vertical-align:center;" />
        <hslider id="heightValue" onchange="setHeight()" min="5" pos="17" max="60"  />
    </grid>    
</hbox>