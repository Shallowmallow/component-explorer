<vbox width="100%">
    <section-header text="Validated Text Inputs" />
    <grid columns="4">
        <label text="Required field:" verticalAlign="center" />
        <textfield validator="required" />

        <label text="Email field 1:" verticalAlign="center" />
        <textfield validators="required, email" />

        <label text="Email field 2:" verticalAlign="center" />
        <textfield validator="email" />

        <label text="Custom Pattern" verticalAlign="center" />
        <textfield>
            <validator type="pattern" pattern="Item 1|Item 2|Item 3" />
        </textfield>
    </grid>

    <section-header text="Validated Dropdowns" />
    <hbox>
        <dropdown width="200" text="Select Item" validator="required" style="b111ackground: #4d4400 #473f00;111border-color:#807100">
            <data>
                <item text="Item 1" />
                <item text="Item 2" />
                <item text="Item 3" />
                <item text="Item 4" />
                <item text="Item 5" />
            </data>
        </dropdown>

        <dropdown width="200" text="Select Email" validator="required, email" style="b111ackground: #4d4400 #473f00;111border-color:#807100">
            <data>
                <item text="Item 1" />
                <item text="Item 2" />
                <item text="someone@there.com" />
                <item text="Item 4" />
                <item text="someoneelse@there.com" />
            </data>
        </dropdown>

        <dropdown width="200" text="Select Item 1 or 2 or 3" style="b111ackground: #4d4400 #473f00;111border-color:#807100">
            <validator type="pattern" pattern="Item 1|Item 2|Item 3" />
            <data>
                <item text="Item 1" />
                <item text="Item 2" />
                <item text="Item 3" />
                <item text="Item 4" />
                <item text="Item 5" />
            </data>
        </dropdown>
    </hbox>

</vbox>