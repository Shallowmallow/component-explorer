<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%">
    <!-- normal -->
    <label text="Normal Checkboxes:" />
    <box width="100%" height="1" style="background-color: #000000;" />
    <hbox>
        <checkbox text="Checkbox 1A" onchange="Logger.log(this.text + ' changed')" />
        <checkbox text="Checkbox 1B" selected="true" onchange="Logger.log(this.text + ' changed')" />
        <checkbox text="Checkbox 1C" onchange="Logger.log(this.text + ' changed')" />
    </hbox>    
    
    <group layout="horizontal" onchange="Logger.log('group changed - ' + event.target.text)">
        <checkbox text="Checkbox 2A" />
        <checkbox text="Checkbox 2B" />
        <checkbox text="Checkbox 2C" selected="true" />
    </group>
</vbox>