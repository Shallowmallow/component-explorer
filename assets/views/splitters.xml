<?xml version="1.0" encoding="utf-8" ?>
<vbox>
    <style>
        .inner-shadow {
            filter: drop-shadow(1, 45, #888888, 0.3, 1, 1, 1, 3, true);
            border: 1px solid #aaaaaa;
        }
    </style>
    
    <splitter width="700" height="500">
        <splitter direction="vertical" width="200" height="100%">
            <box width="100%" height="75%" style="background-color: #EEFFEE;" styleName="inner-shadow" />
            <box width="100%" height="25%" style="background-color: #EEEEFF;" styleName="inner-shadow" />
        </splitter>
        
        <splitter direction="vertical" width="100%" height="100%">
            <box width="100%" height="20%" style="background-color: #FFEEEE;" styleName="inner-shadow" />
            <box width="100%" height="40%" style="background-color: #FFEEFF;" styleName="inner-shadow" />
            <splitter width="100%" height="40%">
                <box width="50%" height="100%" style="background-color: #FFFFEE;" styleName="inner-shadow" />
                <box width="50%" height="100%" style="background-color: #EEFFFF;" styleName="inner-shadow" />
            </splitter>    
        </splitter>    
    </splitter>
</vbox>