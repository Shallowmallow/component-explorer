<?xml version="1.0" encoding="utf-8" ?>
<vbox width="100%">
    <section-header text="Standard" />
    
    <grid>
        <label text="Width:" verticalAlign="center" />
        <slider pos="300" min="300" max="600" onchange="hbox1.width = this.value" />
        
        <label text="Height:" verticalAlign="center" />
        <slider pos="75" min="35" max="300" onchange="hbox1.height = this.value" />
    </grid>
    <hbox id="hbox1" style="border: 1px solid $normal-border-color;padding:5px;" width="300" height="75">
        <box width="33%" height="25" style="background-color: red;border:1px solid red;background-opacity: .3" />
        <box width="34%" height="25" style="background-color: green;border:1px solid green;background-opacity: .3" verticalAlign="center" />
        <box width="33%" height="25" style="background-color: blue;border:1px solid blue;background-opacity: .3" verticalAlign="bottom" />
    </hbox>
    
    <section-header text="Continuous" />
    
    <grid>
        <label text="Width:" verticalAlign="center" />
        <slider pos="300" min="300" max="600" onchange="hbox2.width = this.value" />
    </grid>
    <hbox id="hbox2" style="border: 1px solid $normal-border-color;padding:5px;" width="300" continuous="true">
        <box width="100" height="25" style="background-color: red;border:1px solid red;background-opacity: .3" />
        <box width="100" height="25" style="background-color: green;border:1px solid green;background-opacity: .3" />
        <box width="100" height="25" style="background-color: blue;border:1px solid blue;background-opacity: .3" />
        <box width="100" height="25" style="background-color: red;border:1px solid red;background-opacity: .3" />
        <box width="100" height="25" style="background-color: green;border:1px solid green;background-opacity: .3" />
        <box width="100" height="25" style="background-color: blue;border:1px solid blue;background-opacity: .3" />
        <box width="100" height="25" style="background-color: red;border:1px solid red;background-opacity: .3" />
        <box width="100" height="25" style="background-color: green;border:1px solid green;background-opacity: .3" />
        <box width="100" height="25" style="background-color: blue;border:1px solid blue;background-opacity: .3" />
    </hbox>
    
</vbox>